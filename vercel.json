{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ],
  "crons": [
    {
      "path": "/api/schedule/1",
      "schedule": "0 1 * * 6"
    },
    {
      "path": "/api/schedule/2",
      "schedule": "15 3 * * 6"
    },
    {
      "path": "/api/schedule/3",
      "schedule": "0 6 * * 6"
    },
    {
      "path": "/api/schedule/4",
      "schedule": "15 9 * * 6"
    },
    {
      "path": "/api/schedule/5",
      "schedule": "0 11 * * 1"
    },
    {
      "path": "/testing-only",
      "schedule": "*/10 * * * *"
    }
  ]
}
